<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_top"
    android:id="@+id/container"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white2"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:src="@drawable/arrow_left_icon" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingTop="15dp"
                    android:text="Checkout"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    android:padding="10dp" />


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_white_radius25"
                android:elevation="10dp"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Machine Learning For Beginner"
                        android:textAlignment="center"
                        android:textColor="@color/primary"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Rp. 250.000,-"
                        android:textAlignment="center"
                        android:textColor="@color/primary"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="10dp"
                        android:alpha="0.5"
                        android:background="@color/color2" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Pilih Metode Pembayaran:"
                        android:textColor="@color/primary"
                        android:textSize="13dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Nomor E-wallet: 0823121313131 \nA.N Abdul Rojak"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_color2"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/dana"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary"
                            android:checked="false"
                            android:fontFamily="@font/poppins_medium"
                            android:onClick="onRadioButtonClicked"
                            android:text="DANA"
                            android:textColor="@color/primary" />

                        <RadioButton
                            android:id="@+id/gopay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary"
                            android:checked="false"
                            android:fontFamily="@font/poppins_medium"
                            android:onClick="onRadioButtonClicked"
                            android:text="GOPAY"
                            android:textColor="@color/primary" />

                        <RadioButton
                            android:id="@+id/ovo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary"
                            android:checked="false"
                            android:fontFamily="@font/poppins_medium"
                            android:onClick="onRadioButtonClicked"
                            android:text="OVO"
                            android:textColor="@color/primary" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Upload Bukti Pembayaran:"
                        android:textColor="@color/primary"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/btn_radius"
                        android:padding="15dp"
                        android:text="Upload File"
                        android:textAlignment="center"
                        android:textColor="@color/white" />


                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>