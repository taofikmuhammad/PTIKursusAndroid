<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_home"
    android:id="@+id/container"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_profile"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_white2"
                android:elevation="10dp"
                android:padding="5dp"
                android:src="@drawable/poto_profile" />

            <TextView
                android:id="@+id/namalengkap"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_medium"
                android:text="Hi Ilma Amalia\nLets Start Learning"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"/>

            <ImageView
                android:id="@+id/btn_notification"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_white2"
                android:padding="13dp"
                android:src="@drawable/lucide_bell_ring"
                android:elevation="5dp"

                />

        </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusableInTouchMode="true"
                android:textIsSelectable="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/bg_white2"
                android:drawableLeft="@drawable/lucide_search"
                android:drawableRight="@drawable/keyboard_voice"
                android:fontFamily="@font/poppins_medium"
                android:hint="Cari Kursus.."
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:elevation="10dp"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/machine_learning_course"
                        android:layout_width="wrap_content"
                        android:layout_height="230dp"
                        android:background="@drawable/bg_white2"
                        android:elevation="5dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="190dp"
                            android:padding="30dp"
                            android:src="@drawable/machine_learning_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Machine Learning"
                            android:textColor="@color/primary"
                            android:textSize="13dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/algoritmacourse"
                        android:layout_width="wrap_content"
                        android:layout_height="230dp"
                        android:background="@drawable/bg_white2"
                        android:elevation="5dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="190dp"
                            android:padding="30dp"
                            android:src="@drawable/neural" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Algoritma dan Pemrograman Dasar"
                            android:textColor="@color/primary"
                            android:textSize="13dp" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/jarkomcourse"
                        android:layout_width="wrap_content"
                        android:layout_height="230dp"
                        android:background="@drawable/bg_white2"
                        android:elevation="5dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="190dp"
                            android:padding="30dp"
                            android:src="@drawable/network" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Jaringan Komputer Dasar"
                            android:textColor="@color/primary"
                            android:textSize="13dp" />


                    </LinearLayout>



                </LinearLayout>


            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Rekomendasi"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:text="Lihat Semua" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/machine_learning_course2"
                    android:layout_width="match_parent"
                    android:layout_height="97dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/bg_white_radius25"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="11dp"
                            android:src="@drawable/machine_learning_icon" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="left"
                            android:text="Machine Learning"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/primary"
                            android:textSize="17dp" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:src="@drawable/arrow_right_icon" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/algoritmacourse2"
                    android:layout_width="match_parent"
                    android:layout_height="97dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/bg_white_radius25"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="11dp"
                            android:src="@drawable/neural" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="left"
                            android:text="Algoritma"
                            android:textColor="@color/primary"
                            android:textSize="17dp" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:src="@drawable/arrow_right_icon" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jarkomcourse2"
                    android:layout_width="match_parent"
                    android:layout_height="97dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/bg_white_radius25"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="11dp"
                            android:src="@drawable/network" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="left"
                            android:text="Jaringan Komputer"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/primary"
                            android:textSize="17dp" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:src="@drawable/arrow_right_icon" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>